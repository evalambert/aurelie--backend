{
  "kind": "collectionType",
  "collectionName": "exhibitions",
  "info": {
    "singularName": "exhibition",
    "pluralName": "exhibitions",
    "displayName": "Exposition",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "year": {
      "type": "biginteger",
      "required": true
    },
    "startingDate": {
      "type": "date",
      "required": true
    },
    "endingDate": {
      "type": "date"
    },
    "place": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "structure": {
      "type": "string",
      "required": true
    },
    "text": {
      "type": "blocks",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "curator": {
      "type": "string"
    },
    "link": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "contributionFields": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "text.group-field",
      "repeatable": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "exhibitionView": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "copyright": {
      "type": "string"
    },
    "atlasRelation": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::atlas.atlas",
      "mappedBy": "exhibition"
    },
    "title": {
      "type": "string",
      "required": true
    },
    "groupShow": {
      "type": "boolean"
    }
  }
}
